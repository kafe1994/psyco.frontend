# Configuración del Frontend Psiquiátrico

# URL del backend (obligatoria)
NEXT_PUBLIC_API_URL=https://mi-backend-api.liendoalejandro94.workers.dev/api

# Configuraciones opcionales de la aplicación
NEXT_PUBLIC_APP_NAME="Sistema Psiquiátrico"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_COMPANY_NAME="Tu Hospital/Clínica"
NEXT_PUBLIC_SUPPORT_EMAIL="soporte@tu-empresa.com"

# Configuraciones de desarrollo
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Configuraciones de analytics (opcional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Configuraciones de monitoreo (opcional)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENVIRONMENT=production

# Configuraciones de features flags (opcional)
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_ADVANCED_REPORTS=true
NEXT_PUBLIC_ENABLE_EXPORT_DATA=true